{
    "compilerOptions": {
      "target": "ES6",
      "lib": ["ES6"],
      "module": "ES6",
      "moduleResolution": "node",
      "types": ["node", "jest"],
      "declaration": true,
      "rootDir": "./src",
      "outDir": "./lib",
      "removeComments": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true
    },
    "exclude": ["**/*.spec.*", "**/jest.*", "**/__mocks__/*", "**/__test__/*"],
  }
  